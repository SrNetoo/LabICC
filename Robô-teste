#include <stdio.h>
#include <stdlib.h>
#include <windows.h> //perguntar o porque de m1=126 e m2=3 quando vc nao decalara que m1=0 e m2=0 (linha 10 e 11)

int main()
{

  char s1, s2, s3, m1, m2, n;

s1=0;
s2=0;
s3=0;
m1=0;
m2=0;

 while(1){
 printf("\r s1=%d s2=%d s3=%d \n" s1, s2, s3);
  printf("\r m1-%d m2-%d \n", m1, m2   );

  if (kbhit()) {
    int teclaX = getch();
      if (teclaX == 'a') {
            s1=1, s2=1, s3=1;
            n=1;

      }
     
        if (teclaX == 's'){
            s1=1, s2=0, s3=1;
            n=2;

        }
        
          if (teclaX == 'd'){
            s1=1, s2=1, s3=0;
            n=3;

        }

      
          if (teclaX == 'f'){
           s1=0, s2=1, s3=1;
           n=4;

                }

       
          if (teclaX == 'g'){
         s1=1, s2=0, s3=0;
         n=5;
         }

      
          if (teclaX == 'h'){
            s1=0, s2=1, s3=0;
            n=6;
          }
       
          if (teclaX == 'j'){
            s1=0, s2=0, s3=1;
            n=7;
          }
        
          if (teclaX == 'k'){
            s1=0, s2=0, s3=0;
            n=8;
          }






 if(n==1) {
    m1=0;
    m2=1;
 }

  if(n==2) {
    m1=1;
    m2=1;
 }

  if(n==3) {
    m1=1;
    m2=0;
 }

  if(n==4) {
    m1=0;
    m2=1;
 }

  if(n==5) {
    m1=1;
    m2=0;
 }

  if(n==6) {
    m1=0;
    m2=1;
 }

  if(n==7) {
    m1=0;
    m2=1;
 }

  if(n==8) {
    m1=1;
    m2=1;
 }

 sleep(0.5);

  }
 }

 return 0;
  }
