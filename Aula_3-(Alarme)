#include <stdio.h>
#include <stdlib.h>

int main()
{

  int hora, minuto, segundo, a, b, c;
   hora=minuto=segundo=0;

   printf("\n\n\n");
   printf("   Relogin\n\n\n");
   printf("    Alarme:");
   scanf("%d %d %d", &a, &b, &c);


   printf("\n\n");


   while (1)
      {
       printf("\r   Hora: %2dh %2dm %2ds", hora, minuto, segundo);
       if ((hora==a) && (minuto==b) && (segundo==c)){
            printf("\n\n\n---------ACORDA!!---------");
            break;
        }
       segundo ++;
       if(segundo==60)
            {
             segundo=0;
             minuto++;
            }
       if(minuto==60)
            {
             minuto=0;
             hora++;
            }
       if(hora==24)
            {
             hora=0;
            }
            sleep(1);

      }
  return 0;

  }
